{
  "name": "Home Assistant Hotspot",
  "version": "1.1.5",
  "slug": "home-assistant--hotspot",
  "description": "Access point for your IoT devives with configurable network interface and DHCP server",
  "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
  "url": "https://github.com/C2BB/hassio-addons/tree/master/hassio-hotspot",
  "startup": "system",
  "boot": "auto",
  "host_network": true,
  "apparmor": true,
  "host_dbus": true,
  "full_access": true,
  "privileged": [
    "NET_ADMIN",
    "SYS_ADMIN",
    "SYS_RAWIO",
    "SYS_TIME",
    "SYS_NICE"
  ],
  "devices": [
    "/dev/mem"
  ],
  "map": [
    "config:rw",
    "ssl:rw"
  ],
  "init": false,
  "options": {
    "ssid": "HomeAssistant",
    "wpa_passphrase": "HomeAssistant$17",
    "channel": "1",
    "address": "192.168.2.1",
    "netmask": "255.255.255.0",
    "broadcast": "192.168.2.254",
    "interface": "wlp0s20u8",
    "internet_interface": "enp3s0f0",
    "allow_internet": true,
    "dhcp_enable": true,
    "dhcp_start": "192.168.2.100",
    "dhcp_end": "192.168.2.200",
    "dhcp_dns": "1.1.1.1",
    "dhcp_subnet": "255.255.255.0",
    "dhcp_router": "192.168.2.1",
    "hide_ssid": false,
    "udhcp_additions":[]
    
  },
  "schema": {
    "ssid": "str",
    "wpa_passphrase": "str",
    "channel": "int",
    "address": "str",
    "netmask": "str",
    "broadcast": "str",
    "interface": "str",
    "internet_interface": "str",
    "allow_internet": "bool",
    "dhcp_enable": "bool",
    "dhcp_start": "str",
    "dhcp_end": "str",
    "dhcp_dns": "str",
    "dhcp_subnet": "str",
    "dhcp_router": "str",
    "hide_ssid": "bool",
    "udhcp_additions":["str"]
  }
} 
