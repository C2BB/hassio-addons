{
  "name": "DHCP server (a lazy one)",
  "version": "1.3",
  "slug": "dhcp_server",
  "description": "A simple DHCP server",
  "url": "https://github.com/joaofl/hassio-addons/tree/master/dhcp_server",
  "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
  "advanced": true,
  "startup": "system",
  "boot": "auto",
  "host_network": true,
  "options": {
    "default_lease": 86400,
    "max_lease": 172800,
    "domain": null,
    "dns": ["8.8.8.8", "8.8.4.4"],
    "networks": [
      {
        "subnet": "192.168.2.0",
        "netmask": "255.255.255.0",
        "range_start": "192.168.2.100",
        "range_end": "192.168.2.200",
        "broadcast": "192.168.2.255",
        "gateway": "192.168.2.1",
        "interface": "eth0"
      }
    ],
    "hosts": []
  },
  "schema": {
    "default_lease": "int",
    "max_lease": "int",
    "domain": "str",
    "dns": ["str"],
    "networks": [
      {
        "subnet": "str",
        "netmask": "str",
        "range_start": "str",
        "range_end": "str",
        "broadcast": "str",
        "gateway": "str",
        "interface": "str"
      }
    ],
    "hosts": [
      {
        "mac": "str",
        "name": "str",
        "ip": "str"
      }
    ]
  },
  "image": "homeassistant/{arch}-addon-dhcp_server"
}
